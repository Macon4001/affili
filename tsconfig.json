{
  "compilerOptions": {
    "target": "ES5",                                // Target ECMAScript version (can also use ES6/ESNext)
    "module": "ESNext",                             // Use modern ES modules
    "moduleResolution": "node",                     // Resolve modules in the Node.js style
    "strict": true,                                 // Enable all strict type-checking options
    "jsx": "react",                                  // Use the new JSX transform in React 17+
    "esModuleInterop": true,                        // Allow default imports for CommonJS modules
    "skipLibCheck": true,                          // Skip type checking of declaration files (improves build time)
    "forceConsistentCasingInFileNames": true,       // Ensure consistent casing in file names
    "resolveJsonModule": true,                      // Allow importing JSON files as modules
    "noImplicitAny": true,                          // Raise error on expressions and declarations with an implied 'any' type
    "noUnusedLocals": true,                         // Report unused locals
    "noUnusedParameters": true,                     // Report unused parameters
    "isolatedModules": true,                        // Ensure each file can be safely transpiled independently
    "allowJs": true,                                // Allow JavaScript files to be compiled
    "checkJs": false,                               // Disable checking for JavaScript files
    "skipDefaultLibCheck": true,                    // Skip checking of default library types
    "incremental": true,                            // Enable incremental compilation for faster builds
    "outDir": "./dist",                             // Output directory for compiled files
    "baseUrl": ".",                                 // Base directory for non-relative module imports
    "paths": {
      "*": ["node_modules/*", "src/types/*"]        // Allow custom paths
    }
  },
  "include": [
    "src/**/*"                                      // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules",                                 // Exclude node_modules from compilation
    "build",                                        // Exclude the build directory
    "dist"                                          // Exclude the dist directory
  ]
}
